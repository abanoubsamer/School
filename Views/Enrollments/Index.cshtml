@model IEnumerable<School.Models.Enrollment>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>


@if (!Model.Any())
{
    <h3 class="text-center my-3"> Is Not Enrollments </h3>
}
else
{

   <table class="table table-bordered  " id="myTable" style="width:100%">
        <thead>
            <tr>
                <th
                class="text-center">
                    @Html.DisplayNameFor(model => model.Student.StudentId)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Student.FirstName)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Course.Tital)
                </th >
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Grade)
                </th>

                <th class="text-center"> Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Student.StudentId)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Student.FirstName)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Course.Tital)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Grade)
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.EnrollmentId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.EnrollmentId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.EnrollmentId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />


}
