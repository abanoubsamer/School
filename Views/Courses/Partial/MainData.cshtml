@model School.Models.Course


<form method="post" enctype="multipart/form-data">


    @Html.AntiForgeryToken()


    <div class=" border p-3 mt-4">


        <div class=" row p-2 ">
            <h2 class=" text-primary">
                Add New Item
            </h2>
            <hr />
            <div asp-validation-summary="All"></div>

            <div class=" mb-3 ">



                <label asp-for="Tital"></label>
                <input asp-for="Tital" class="form-control" required />
                <span asp-validation-for="Tital" class="text-danger"></span>
            </div>
            <div class=" mb-3 ">
                <label asp-for="LevelId" class="control-label"></label>
                <select asp-for="LevelId" class="form-control" asp-items="ViewBag.CourseLevel">
                    <option value="">-- Select Course Level --</option>
                </select>
                <span asp-validation-for="LevelId" class="text-danger"></span>
            </div>
            <div class=" mb-3 ">
                <label asp-for="Credits"></label>
                <input asp-for="Credits" class="form-control" required />
                <span asp-validation-for="Credits" class="text-danger"></span>
            </div>
            <div class=" mb-3 ">

                <div class="col-md-10">
                    <div class="form-check">
                        <input asp-for="IsCourseActive" class="form-check-input" checked />
                        <label class="form-check-label" for="IsCourseActive">Active Course</label>
                    </div>
                    <span asp-validation-for="IsCourseActive" class="text-danger"></span>
                </div>
            </div>

            <div class=" mb-3 ">
                <label asp-for="Price"></label>
                <input asp-for="Price" type="text" class="form-control" required />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        

            <br />
            <hr />
            <div class=" mb-3 ">
                <button type="submit" id="submit" class="btn btn-success" style="border-radius: 10px; width:250px;">
                    <i class="bi bi-plus-circle"></i> &nbsp; Add New Item
                </button>

                <a asp-action="Index" asp-controller="Course" class=" btn btn-primary" style="border-radius: 10px; width:250px;">
                    <i class="bi bi-skip-backward-circle-fill"></i>&nbsp; Back To Item
                </a>
            </div>


        </div>
    </div>

</form>